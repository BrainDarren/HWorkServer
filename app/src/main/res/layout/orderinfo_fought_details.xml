<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorToolbar">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/back"
            android:id="@+id/toolbar_icon_order"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成订单详情"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:textSize="15sp"
                android:text="雇       主:"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_linkname"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:text="时       间:"
                android:textSize="15sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_time"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:text="服务类型:"
                android:textSize="15sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_serviceclass"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">
            <TextView
                android:text="实际数量:"
                android:textSize="15sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_confirmnum"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:text="实际支付:"
                android:textSize="15sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_paymoney"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:text="地        址:"
                android:textSize="15sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_address"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical">

            <TextView
                android:text="订单评价:"
                android:textSize="15sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/order_providerJudgeLevel" />
            <TextView
                android:id="@+id/tv_default_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无评价"
                android:layout_weight="1"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/order_provider_RatingBar"
                android:visibility="gone"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="1.0"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
