<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_login"
    android:orientation="vertical">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/logo"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_icon_username"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_username"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="用户名/手机号"
                android:ems="10"
                android:id="@+id/username"
                android:singleLine="true"
                android:layout_weight="1"
                android:background="@null"
                android:layout_marginLeft="35dp"
                android:padding="10dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/editextbg"
                android:layout_alignBottom="@id/username"/>
            <!--style="@style/my_edittext_style"-->

            <ImageView
                android:src="@drawable/abc_ic_clear_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:id="@+id/name_clear" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_icon_password"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_pwd"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="密码"
                android:ems="10"
                android:id="@+id/userpwd"
                android:layout_weight="1"
                android:singleLine="true"
                android:background="@null"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/userpwd"
                android:src="@mipmap/editextbg"/>

            <ImageView
                android:src="@drawable/abc_ic_clear_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:id="@+id/mima_clear" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:text="记住密码"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@color/text_normal"
                android:id="@+id/cb_Remember" />

            <CheckBox
                android:text="自动登录"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/cb_AutoLogin"
                android:textColor="@color/text_normal"
                android:checked="false" />

        </LinearLayout>


        <Button
            android:text="登录"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:background="@drawable/login_btn_click_before"
            android:enabled="false"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Login"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="20dp" />
    </LinearLayout>



</LinearLayout>
