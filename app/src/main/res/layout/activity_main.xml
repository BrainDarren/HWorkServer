<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.zdpractice.hworkservice.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_toolbar"
        android:background="@color/colorGuidance"
        app:theme="@style/ToolbarThem"
        >

        <ImageView
            android:id="@+id/toolbar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:id="@+id/tv_title" />

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/lay_base"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0"
        android:background="@color/colorWhite"
        >

        <LinearLayout
            android:id="@+id/main_home"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="39dp"
                android:layout_height="23dp"
                android:src="@mipmap/icon_homegray" />

            <TextView
                android:id="@+id/main_weixin_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp"
                android:textSize="10dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_order"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivOrder"
                android:layout_width="39dp"
                android:layout_height="23dp"
                android:src="@mipmap/icon_ordergray"/>

            <TextView
                android:id="@+id/main_mess_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp"
                android:textSize="10dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_personal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivPersonal"
                android:layout_width="39dp"
                android:layout_height="23dp"
                android:src="@mipmap/icon_myselfgray" />

            <TextView
                android:id="@+id/main_faxian_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp"
                android:textSize="10dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
